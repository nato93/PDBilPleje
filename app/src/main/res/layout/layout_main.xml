<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:paddingVertical="32dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ps_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="BERKAEFTELSE"
        android:textAlignment="center"
        android:textColor="@color/light_green_500"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/ps_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:src="@drawable/ic_checked"
        />

    <TextView
        android:id="@+id/ps_txt_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Din tid er nu booket ind i kalenderen! d. 01/22/2021 kl 09:30 \nOfilea plads."
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/ps_txt_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Din tid er nu booket ind i kalenderen! d. 01/22/2021 kl 09:30 \nOfilea plads."
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        />


</LinearLayout>